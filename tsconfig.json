{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": false,

    "allowJs": false,
    "allowSyntheticDefaultImports": true,

    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": "./src/",
    "paths": {
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/store/*": ["store/*"],
      "@/styles/*": ["styles/*"],
      "@/svg/*": ["svg/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "./src",
    "./@types"
  ]
}
